<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/prisonfade"
    tools:context="com.apps.vikasperaka.outcomes.Results">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:srcCompat="@color/purple"
        android:id="@+id/imageView4"
        android:alpha=".6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/back"
        android:id="@+id/mainBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/question"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/helpBtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/exclamation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/disclaimerbtn" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/gavel"
        android:id="@+id/imageView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Crime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crimeLabelTxt"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignLeft="@+id/crimeTxt"
        android:layout_alignStart="@+id/crimeTxt"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/crimeTxt"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/crimeLabelTxt"
        android:layout_alignLeft="@+id/punishmentLabelTXt"
        android:layout_alignStart="@+id/punishmentLabelTXt"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="Punishment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/punishmentLabelTXt"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/crimeTxt"
        android:layout_alignLeft="@+id/punishmentTxt"
        android:layout_alignStart="@+id/punishmentTxt"
        android:layout_marginTop="43dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/punishmentTxt"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@+id/punishmentLabelTXt"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginTop="38dp" />

</RelativeLayout>
